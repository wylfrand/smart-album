		<class>com.mycompany.database.smartalbum.model.Comment</class>
		<class>com.mycompany.database.smartalbum.model.Image</class>
		<class>com.mycompany.database.smartalbum.model.Shelf</class>
		<class>com.mycompany.database.smartalbum.model.User</class>
		<class>com.mycompany.database.smartalbum.model.MetaTag</class>
		<class>com.mycompany.database.smartalbum.model.MessageHTML</class>
		<class>com.mycompany.database.smartalbum.model.MessagePart</class>
		<exclude-unlisted-classes />
	</persistence-unit>
</persistence>